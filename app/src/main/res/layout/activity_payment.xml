<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PaymentActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/bottom_lin">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/background_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offers &amp; promotions"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get upto 25% discount on Multikart Pay using ICICI Bank Net banking or Cards"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/round_home"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginVertical="@dimen/_8sdp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get upto 25% discount on Multikart Pay using ICICI Bank Net banking or Cards"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/round_home"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginVertical="@dimen/_8sdp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show More"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#D88304"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"/>


            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_white"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/round_home"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                >


                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/img_case_on_delivery"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Case On Delivery"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_12ssp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        />

                </LinearLayout>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/round_home"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:visibility="gone"
                >


                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/img_debit_card"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit/Credit Card"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_12ssp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        />

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/round_home"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                >


                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/img_pay_online"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Pay"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_12ssp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_white"
                android:visibility="visible">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Details :"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBTOTAL"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹1500"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DELIVERY CHARGE"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹80"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorGreen"
                        android:gravity="right"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COUPON DISCOUNT"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹50"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorRed"
                        android:gravity="right"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹1580"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>


            </LinearLayout>






        </LinearLayout>

    </ScrollView>






    <LinearLayout
        android:id="@+id/bottom_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorText"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginLeft="@dimen/_5sdp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹2400"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>



        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:background="@drawable/check_out_bg"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_weight="1"
            android:layout_gravity="center"
            />


    </LinearLayout>




</RelativeLayout>